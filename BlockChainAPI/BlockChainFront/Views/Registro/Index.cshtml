@model BlockChainFront.Models.RegistroModel

@{
    ViewBag.Title = "Registro";
}

<h2>@ViewBag.Title.</h2>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")

@using (Html.BeginForm("Create", "Registro", FormMethod.Get))
{
